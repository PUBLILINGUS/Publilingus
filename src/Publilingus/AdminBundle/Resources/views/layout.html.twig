<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.1//EN" "http://www.w3.org/TR/xhtml11/DTD/xhtml11.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="fr" lang="fr" dir="ltr" >
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=EmulateIE7" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="robots" content="index, follow, all" />
    <meta name="Author" content="Marion" />
    <meta name="Language" content="fr"/>
    <meta name="Copyright" content="{% trans 'homepage.titre' %}" />
    <meta name="Publisher" content="Marion" />
    <meta name="Description" content="" />
    <meta name="Keywords" content="" />

    <title>{% block title %}{% endblock %}</title>

    {% block stylesheets %}
    {% endblock %}

    {% block javascripts %}
    {% endblock %}
</head>

<body>
    <div>
        <div  class="container" >
            <div id="header">

                <a href="{{ path('homepage') }}" id="logo"><img src="{{ asset('bundles/publilinguspubli/images/logo.png') }}" alt="Logo Publilingus" title="Publilingus" /></a>
                
                {% block content_header_more %}{% endblock %}

                <div id="menu">
                    {% block menu %}{% endblock %}
                </div>

            </div>
        </div>
    </div> <!-- container end -->

    <div id="titre">{% block pageTitre %}{% endblock %}</div>

    {% if app.session.flash('notice') %}
        <div class="flash-message">
            <em>Notice</em>: {{ app.session.flash('notice') }}
        </div>
    {% endif %}

    <div id="content">
        {% block content %} {% endblock %}
    </div>

    {% include 'PublilingusPubliBundle:Publi:footer.html.twig' %}

    <script type="text/javascript">
        head.js(
            "{{ asset('common/js/jquery-1.4.4.min.js') }}",
            "{{ asset('common/js/jquery.easing.1.3.js') }}"
        );
    </script>

</body>
</html>